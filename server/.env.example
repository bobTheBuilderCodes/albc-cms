PORT=5000
# Local development database (used when NODE_ENV is not "production")
MONGO_URI_LOCAL=mongodb://127.0.0.1:27017/albc-cms-local
# Production database (used when NODE_ENV=production, e.g. Render)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/albc-cms?retryWrites=true&w=majority
JWT_SECRET=replace_with_strong_secret

ADMIN_EMAIL=admin@church.com
ADMIN_PASSWORD=admin123

# Outgoing email settings
EMAIL_FROM=your_gmail_address@gmail.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_gmail_address@gmail.com
# Gmail app password (16 chars, no spaces)
SMTP_PASS=yourgmailapppassword
SMTP_SECURE=false

# Hour of day (0-23) for daily birthday checks
BIRTHDAY_EMAIL_HOUR=8
